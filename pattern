n=int(input())
i=1
while i<=n:
    j=1
    while j<=i:
        print(j,end="")
        j=j+1
    m=2*n-2*i
    j=1
    while j<=m:
        print(" ",end="")
        j=j+1
    j=1
    o=i
    while j<=i:
        
        print(o,end="")
        o=o-1
        
        j=j+1
    print()
    i=i+1
    
